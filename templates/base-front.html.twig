    <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="position: fixed;top: 0;height: 150px;background-color: red;">
        <!-- Brand -->
        <a class="navbar-brand" href="#" id="logo">Cluster</a>
        <!-- Links -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent" style="margin-right: 5rem">
            <ul class="navbar-nav">

                {% if not app.user  %}
                    <a class="nav-link"  href="{{ path('all_events') }}">Evènements</a>
                    <a class="nav-link" href="{{ path('app_login') }}">Se Connecter</a>

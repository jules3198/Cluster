                    <a class="nav-link" href="{{ path('app_register_pro') }}">Je suis un PRO</a>
                {% endif %}
                {% if app.user  %}
                    <a class="nav-link" style="margin-top: 10px" href="{{ path('all_events') }}">Evènements</a>
                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link " href="#" id="navbardrop" data-toggle="dropdown">

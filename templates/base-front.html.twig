                            {% if app.user.userProfile == null %}
                                <img class="img-profile rounded-circle"
                                     height="40px" src="https://eu.ui-avatars.com/api/?name={{ app.user.firstname }}+{{ app.user.lastname | capitalize }}">
                            {% else %}
                                <img class="img-profile rounded-circle"
                                     height="40px" src="{{ asset('images/users/'~app.user.userProfile.imageName) }}">
                            {% endif %}

                        </a>
                        <div class="dropdown-menu">
                            {% if "ROLE_PRO" in app.user.roles%}
                                <a class="dropdown-item" href="{{ path('event_index_pro') }}">Tableau de bord</a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ path('actual_future_event') }}">Tableau de bord</a>
                            {% endif %}
                            <a class="dropdown-item" href="{{ path('profile_edit') }}">Editer profil</a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    </li>
                {% endif %}

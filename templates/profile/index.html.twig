{% extends 'base-dashboard.html.twig' %}
{% block title %}Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('profile') }}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container-fluid"  >

        <div class="row" style="margin-top: 4rem">
            <div class="col-md-1"></div>
            <div class="col-md-11">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="row">
                                {% if user.userProfile != null %}
                                    <div class="col-md-12 imageDiv">
                                        <img  height="200px" width="230px" src="{{ asset('images/users/'~user.userProfile.imageName) }}" data-holder-rendered="true">
                                    </div>
                                {% else %}
                                    <div class="col-md-12 imageDiv">
                                        <img  height="200px" width="230px" src="{{ asset('images/users/user-image.jpg') }}" data-holder-rendered="true">
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-9" style="margin-left: -3rem">
                            <div class="container-fluid" style="margin-top: 1rem">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h2 style="margin-bottom: 1rem" class="fullName">{{ user.lastname }} {{ user.firstname }} </h2>
                                        {% if user.active==1 %}
                                            <p class="accountState">Account : <span class="badge badge-success" style="font-size: 15px">Active</span></p>
                                        {% endif %}
                                        {% if user.active==0 %}
                                            <p class="accountState">Account : <span class="badge badge-danger" style="font-size: 18px">Inactive</span></p>
                                        {% endif %}
                                    </div>
                                    <div class="col-md-8">
                                        <a style=" float: right" class="btn btn-info btn-round btn-lg" href="{{ path('profile_edit') }}">Modifier</a>
                                    </div>
                                </div>
                            </div>
                            <div class="container-fluid" style="margin-top: 3rem">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div>
                                            <button class="tablink" onclick="openPage('News', this, '#1d8cf8')" id="defaultOpen">Profiil</button>
                                            <button class="tablink" onclick="openPage('Home', this, '#1d8cf8')">Activités</button>
                                        </div>
                                        <div id="Home" class="tabcontent">
                                            <div class="row">
                                                <div class="col-md-1">
                                                    <h4>Nom</h4>
                                                    <h4>Prénom</h4>
                                                    <h4>Email</h4>
                                                    <h4>Adresse</h4>
                                                </div>
                                                <div class="col-md-10">

                                                </div>
                                            </div>
                                        </div>

                                        <div id="News" class="tabcontent" >
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h4>Nom</h4>
                                                    <h4>Prénom</h4>
                                                    <h4>Email</h4>
                                                    {% if user.address is not null %}
                                                        <h4>Domicile</h4>
                                                    {% endif %}
                                                    {% if user.city is not null %}
                                                        <h4>Ville</h4>
                                                    {% endif %}
                                                    {% if user.siret is not null %}
                                                            <h4>Siret</h4>
                                                    {% endif %}

                                                    {% if user.siren is not null %}
                                                            <h4>Siren</h4>
                                                    {% endif %}

                                                    {% if user.premium ==1 %}
                                                            <h4>Type de compte</h4>
                                                    {% endif %}
                                                </div>
                                                <div class="col-md-6">
                                                    <h4>{{ user.lastname }}</h4>
                                                    <h4>{{ user.firstname }} </h4>
                                                    <h4>{{ user.email }}</h4>
                                                    {% if user.address is not null %}
                                                        <h4>{{ user.address }}</h4>
                                                    {% endif %}
                                                    {% if user.city is not null %}
                                                        <h4>{{ user.city }}</h4>
                                                    {% endif %}
                                                    {% if user.siret is not null %}
                                                        <h4> {{ user.siret }} </h4>
                                                    {% endif %}

                                                    {% if user.siren is not null %}
                                                        <h4> {{ user.siren }} </h4>
                                                    {% endif %}

                                                    {% if user.premium ==1 %}
                                                        <h4> premium </h4>
                                                    {% endif %}
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>


    <script>
        function openPage(pageName,elmnt,color) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].style.backgroundColor = "";
            }
            document.getElementById(pageName).style.display = "block";
            elmnt.style.backgroundColor = color;
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();
    </script>

{% endblock %}


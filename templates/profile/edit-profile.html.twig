{% extends 'base-front.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('profile') }}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="wrapper" style="margin-top: 250px;margin-bottom: 3rem">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-8">
                    <div class="container-fluid">
                        <h1>Modifier votre profil</h1>
                        <div class="row" style="margin-top: 4rem">
                            <div class="col-md-4" style="text-align: center">
                                {% if user.userProfile != null %}
                                    <img class="rounded-circle profile-avatar" height="200px" width="200px" src="{{ asset('images/users/'~user.userProfile.imageName) }}" alt="Card image cap">
                                {% else %}
                                    <img class="rounded-circle profile-avatar" height="200px" width="200px" src="{{ asset('images/users/user.png') }}" alt="Card image cap">
                                {% endif %}
                                <br>
                                {{ form_start(imageForm)}}
                                {{ form_widget(imageForm.imageFile)}}
                                <input style="margin-top: 1rem" type="submit" value="Modifier" class="btn btn-info btn-round btn-lg">
                                {{ form_end(imageForm)}}
                            </div>
                            <div class="col-md-8 editRight">
                                {{ form_start(form) }}

                                <div class="form-group">
                                    <label for="uname">Firstname:</label>
                                    {{ form_widget(form.firstname) }}
                                </div>
                                <div class="form-group">
                                    <label for="uname">Lastname:</label>
                                    {{ form_widget(form.lastname) }}
                                </div>
                                <div class="form-group">
                                    <label for="uname">Email:</label>
                                    {{ form_widget(form.email) }}
                                </div>
                                {% if "ROLE_PRO" in user.roles %}
                                    <div class="form-group">
                                        <label for="uname">Siren:</label>
                                        {{ form_widget(form.siren) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="uname">Siret:</label>
                                        {{ form_widget(form.siret) }}
                                    </div>
                                {% endif %}
                                <div class="form-group">
                                    <label for="uname">Address:</label>
                                    {{ form_widget(form.address) }}
                                </div>
                                <div class="form-group">
                                    <label for="uname">City:</label>
                                    {{ form_widget(form.city) }}
                                </div>

                                <input type="submit" value="Modifier" class="btn btn-info btn-round btn-lg">

                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>

{% endblock %}


{% extends 'base-front.html.twig' %}

{% block title %}Promouvoir cette évenement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('front') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('front') }}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="wrapper" style="margin-top: 80px">
        <div class="page-header">
            <div class="page-header-image"></div>
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 offset-md-3">
                            <div id="square7" class="square square-7"></div>
                            <div id="square8" class="square square-8"></div>
                            <div class="card card-register">
                                {{ form_start(form) }}
                                    <div class="card-header">
                                        <img class="card-img" src="{{ asset('build/images/square1.png') }}"
                                             alt="Card image">
                                        <h3 class="card-title text-center">Promouvoir</h3>
                                    </div>
                                    <div class="card-body">

                                        <div class="input-group">
                                            {{ form_widget(form.capital) }}
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <input type="submit" value="Payer"
                                               class="btn btn-info btn-round btn-lg">

                                        <a href="{{ path('event_index_pro') }}"
                                           class="btn btn-info btn-round btn-lg">
                                            back to list events</a>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                    <div class="register-bg"></div>


                    <div id="square1" class="square square-1">
                        <h4>Mes promotions</h4>
                        {% for  list in bid.backupPromotion %}
                            <li>{{ list }}€ - {{ bid.getCreatedAt()|date('d/m/Y') }}</li>
                        {% endfor %}

                    </div>

                    <div id="square2" class="square square-2"></div>
                    <div id="square3" class="square square-3"></div>
                    <div id="square4" class="square square-4"></div>
                    <div id="square5" class="square square-5"></div>
                    <div id="square6" class="square square-6"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
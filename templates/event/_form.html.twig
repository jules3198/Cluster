
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.name) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.date_start) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.date_end) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.location) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.description) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.nb_participants) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.price) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.restrictions) }}
            </div>
            <div class="col-md-12">
                <ul class="tags" data-prototype="{{ form_widget(form.eventImages.vars.prototype)|e('html_attr') }}"> </ul>
                    <button type="button" class="add_item_link btn btn-info btn-round btn-lg" data-collection-holder-class="tags">Ajouter une photo</button><br>
                <button style="margin-top: 2rem" class="btn">{{ button_label|default('Enregistrer') }}</button>
                    {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>

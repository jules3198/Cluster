{% extends 'base-dashboard.html.twig' %}

{% block title %}Event{% endblock %}

{% block content %}
    <h1>Evenement {{ event.getName() }}</h1>

    <table class="table" style="color: #f9f9f9;">
        <tbody>

        <tr>
            <th>Nom</th>
            <td>{{ event.name }}</td>

        <tr>
            <th>Date/Heure de début</th>
            <td>{{ event.dateStart ? event.dateStart|date('d/m/Y H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Date/Heure de fin</th>
            <td>{{ event.dateEnd ? event.dateEnd|date('d/m/Y H:i') : '' }}</td>
        </tr>

        <tr>
            <th>Lieu</th>
            <td>{{ event.location }}</td>
        </tr>
        <tr>

            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr>
        <tr>
            <th>Capacité</th>
            <td>{{ event.nbParticipants }}</td>
        </tr>

        <tr>
            <th>Prix</th>
            <td>{{ event.price }} €</td>
        </tr>

        {% for resctriction in event.restrictions %}
            <tr>
                <th>Restriction(s)</th>

                <td>{{ resctriction.getName() }}</td>

            </tr>
        {% endfor %}

        <tr>
            <th>Status</th>
            <td>{{ event.status }}</td>
        </tr>

        </tbody>
    </table>

    <div class="row" style="width: 100%;margin-top: 2rem">
        {% if event.eventImages|length > 0 %}
            {% for image in event.eventImages %}
                <div style="width: 23%; margin-right: 18px; float: left;height: 250px;background-color: #0f6848;margin-top: 10px">
                    <img src="{{ asset('images/events/'~image.imageName) }}" height="100%"  width="100%" alt="">
                </div>
            {% endfor %}
        {% endif %}
    </div>
<div class="row" style="margin-top: 2rem">
    {% if "ROLE_PRO" not in app.user.roles %}
        <a href="{{ path('event_index_user') }}"class="btn btn-outline-primary">back to list</a>
    {%else%}
        <a href="{{ path('event_index_pro') }}"class="btn btn-outline-primary">back to list</a>
    {% endif %}

    {% if event.user == app.user %}
        {% if event.user.roles != 'ROLE_USER' %}

            <a href="{{ path('event_edit', {'id': event.id}) }}"class="btn btn-outline-primary">edit</a>

            {{ include('event/_delete_form.html.twig') }}

        {% endif %}
    {% endif %}
</div>

{% endblock %}
